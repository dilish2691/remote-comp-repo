pipeline {
    agent any
     tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven-3.8.1"
    }
    stages {
        stage('fetch the code') {
            steps {
                git credentialsId: 'github-cred', url: 'https://github.com/dilish2691/remote-comp-repo.git'
            }
        }
        stage('Build the code') {
            steps {
                //tool name: 'maven', type: 'maven'
                sh 'mvn clean package'
            }
        }
         stage('Post Build') {
            steps {
                sh 'aws s3 cp $WORKSPACE/target/LoginRegisterApp.war s3://dili/'
            }
        }
    }
     post {
         always {
            sshPublisher(publishers: [sshPublisherDesc(configName: 'ansibleController', transfers: [sshTransfer(cleanRemote: false, excludes: '', execCommand: '''ansible-playbook /etc/ansible/tomcat.yml
ansible-playbook  /etc/ansible/apache.yml''', execTimeout: 120000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '', remoteDirectorySDF: false, removePrefix: '', sourceFiles: '')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: true)])
         }
         success {
              echo "I am running because the job ran successfully"
         }
         unstable {
              echo "Gear up ! The build is unstable. Try fix it"
         }
         failure {
             echo "OMG ! The build failed"
         }
    }
}
